class TwitterAgentPipeline:
    def __init__(self):
        # Content creation agents
        self.research_agent = ResearchAgent()
        self.writer_agent = WriterAgent()
        self.keyword_agent = KeywordAgent()
        self.seo_agent = SEOAgent()
